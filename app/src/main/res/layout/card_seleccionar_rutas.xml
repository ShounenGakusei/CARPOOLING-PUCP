<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/txt_rutaNum"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:background="@drawable/border_text"
            android:text="Ruta Numero"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/txt_descrpRuta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.296" />

        <TextView
            android:id="@+id/txt_descrpRuta"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Descripcion de la ruta"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/txt_distritoRut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />

        <TextView
            android:id="@+id/txt_distritoRut"
            android:layout_width="138dp"
            android:layout_height="21dp"
            android:text="Distrito de la ruta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_descrpRuta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.758" />

        <ImageView
            android:id="@+id/img_addRuta"
            android:layout_width="50dp"
            android:layout_height="39dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_descrpRuta"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txt_distritoRut"
            app:layout_constraintTop_toBottomOf="@+id/txt_descrpRuta"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_add_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>